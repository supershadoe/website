---
import GitHubIcon from '../components/fa-icons/GitHubIcon.astro';
import GitLabIcon from '../components/fa-icons/GitLabIcon.astro';
import MailIcon from '../components/fa-icons/MailIcon.astro';
import RedditIcon from '../components/fa-icons/RedditIcon.astro';
import TwitterIcon from '../components/fa-icons/TwitterIcon.astro';
import '../styles/global.css';

type Props = {
    title: string;
};

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="theme-color" content="#212121" />
        <link rel="icon" href="favicon.ico" />
        <link rel="apple-touch-icon" href="apple-touch-icon.png" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta
            name="description"
            content="supershadoe creates stuff with clean and maintainable code, a good looking UI with decent UX and a short but unique and powerful list of features."
        />
        <title>{title}</title>
    </head>
    <body data-sveltekit-preload-data="hover">
        <div class="app font-sans">
            <a
                href="#main"
                class="link-base-content left-0 absolute p-3 m-3 mt-16
            -translate-y-28 focus:translate-y-0"
                >Skip to main content</a
            >

            <header>
                <nav class="navbar">
                    <div class="navbar-start">
                        <a
                            class="btn btn-ghost normal-case text-xl tracking-wider"
                            href="/"
                            >supershadoe
                        </a>
                    </div>
                    <div class="navbar-end">
                        <a
                            class="btn btn-ghost rounded-sm"
                            href="https://github.com/supershadoe">
                            <GitHubIcon />
                        </a>
                        <a
                            class="btn btn-ghost rounded-sm"
                            href="https://gitlab.com/supershadoe">
                            <GitLabIcon />
                        </a>
                        <a
                            class="btn btn-ghost rounded-sm"
                            href="https://twitter.com/supershadoe">
                            <TwitterIcon />
                        </a>
                        <a
                            class="btn btn-ghost rounded-sm"
                            href="https://reddit.com/u/supershadoe">
                            <RedditIcon />
                        </a>
                        <a
                            class="btn btn-ghost rounded-sm"
                            href="mailto:hello@shadoe.dev">
                            <MailIcon />
                        </a>
                    </div>
                </nav>
            </header>

            <main id="main" class="justify-center flex flex-col min-h-[90vh]">
                <slot />
            </main>
        </div>
    </body>
</html>
